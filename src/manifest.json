{
  "manifest_version": 3,
  "name": "IVEE Chrome Extension",
  "description" : "IVEE: Veterinary pet health record technology",
  "version": "0.0.1",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon-34.png"
  },
  "icons": {
    "128": "favicon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8080/*","https://teleeeze.web.app/*","https://login.evetpractice.com/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "favicon-128.png", "favicon-34.png"],
      "matches": []
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
